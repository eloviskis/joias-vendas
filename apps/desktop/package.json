{
  "name": "joias-desktop",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "build:web": "cd ../web && npm run build",
    "build:api": "cd ../api && npm run build",
    "prisma:generate:sqlite": "cd ../api && npx prisma generate --schema prisma/schema.sqlite.prisma",
    "dist": "npm run build:web && npm run prisma:generate:sqlite && npm run build:api && electron-builder",
    "start": "electron ."
  },
  "dependencies": {
    "@fastify/http-proxy": "^9.0.1",
    "@fastify/static": "^6.12.0",
    "electron": "^31.7.0",
    "fastify": "^4.26.1"
  },
  "devDependencies": {
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.vendasvani.joias",
    "productName": "Vani e Elo Joias",
    "files": [
      "main.js",
      "proxystatic.js",
      "../web/dist/**",
      "../api/dist/**",
      "../api/node_modules/@prisma/**",
      "../api/node_modules/.prisma/**",
      "../api/package.json"
    ],
    "asarUnpack": [
      "**/.prisma/**",
      "**/@prisma/**"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
